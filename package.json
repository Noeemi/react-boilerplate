{
  "name": "react-boilerplate",
  "homepage": "https://noeemi.github.io/react-boilerplate/",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Klau",
  "license": "MIT",
  "private": "true",
  "scripts": {
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "start": "webpack serve -c ./webpack.dev.js",
    "build": "webpack -c ./webpack.prod.js",
    "build:serve": "yarn build && serve ./build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint ./ --ext=js,jsx --ignore-path .gitignore --no-error-on-unmatched-pattern",
    "lint:css": "stylelint src/**/*.js"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "clean-webpack-plugin": "^3.0.0",
    "emotion-theming": "^10.0.27",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^5.0.0-alpha.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  }
}
