{
  "name": "@imklau/react-boilerplate",
  "description": "Basic React Boilerplate",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Klau",
  "license": "MIT",
  "repository": "git@github.com:Noeemi/react-boilerplate.git",
  "scripts": {
    "start": "webpack serve -c ./webpack.dev.js",
    "build": "webpack -c ./webpack.prod.js",
    "build:serve": "yarn build && serve ./build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint ./ --ext=js,jsx --ignore-path .gitignore --no-error-on-unmatched-pattern",
    "lint:css": "stylelint src/**/*.js",
    "format": "prettier --write . --ignore-path .gitignore"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "clean-webpack-plugin": "^3.0.0",
    "emotion-theming": "^10.0.27",
    "html-webpack-plugin": "^5.0.0-alpha.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@svgr/webpack": "^5.5.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  }
}
